#!/usr/bin/env bash

#  Deploy
#
#  Deploys Sleuth-Autopsy onto Ubuntu for UCI class on Autopsy.
#
#    This script needs some cleaning up and documentation, but
#    suffices for now to get students up and running.
#

echo 'Starting . . .'

if [[ $(id -u) -ne 0 ]]
then
  cat <<__EOD__

  This script must be run as root.

  Run as:

    sudo bash -c $(curl -s "https://raw.githubusercontent.com/galaxy3-net/sleuthkit-autopsy/main/Deploy)"

    or for development:

    sudo bash -c $(curl -s "https://raw.githubusercontent.com/galaxy3-net/sleuthkit-autopsy/main/Deploy)"


__EOD__

  exit 1

fi

function strukturag ()
{
  echo "Installing ${1} . . ."
  git clone https://github.com/strukturag/${1}.git /usr/src/${1}/

  cd /usr/src/${1}/
  ./autogen.sh
  ./configure
  make
  make install
  echo "done . . ."
}

function libheif ()
{
  git clone https://github.com/strukturag/libheif.git /usr/src/libheif/

  cd /usr/src/libheif/
  ./autogen.sh
  ./configure
  make
  make install
  echo "done . . ."
}

function ImageMagick ()
{
  echo "Installing ImageMagick . . ."
  cd /usr/src/
  wget https://www.imagemagick.org/download/ImageMagick.tar.gz
  tar xf ImageMagick.tar.gz

  cd ImageMagick-7*
  ./configure --with-heic=yes
  make
  make install
  echo "done . . ."
}

function bellsoft-java8 ()
{
  echo "Installing bellsoft-java8 . . ."
  apt-key list | egrep '99A5 C88E 3C5B 1FA8 B05A  19D3 32E9 7501 79FC EA62' || \
    wget -q -O - https://download.bell-sw.com/pki/GPG-KEY-bellsoft | apt-key add -
  stat /etc/apt/sources.list.d/bellsoft.list || \
    echo "deb [arch=amd64] https://apt.bell-sw.com/ stable main" | tee /etc/apt/sources.list.d/bellsoft.list
  apt-get update && apt-get install bellsoft-java8-full
  #    2. Set JAVA_HOME
  export JAVA_HOME=/usr/lib/jvm/bellsoft-java8-full-amd64
  egrep "export JAVA_HOME={$JAVA_HOME}" /etc/profile || echo "export JAVA_HOME=${JAVA_HOME}" >> /etc/profile
  echo "done . . ."
}

function download ()
{
  mkdir -p $(dirname ${1})
  stat ${1} && return
  wget -O ${1} ${2}
}

#  If /vagrant exists, write Autopsy & Sleuthkit temporary files there.
stat /vagrant && export TMPDIR=/vagrant/autopsy
echo "TMPDIR=${TMPDIR:=/root}"

download ${TMPDIR}/autopsy-4.17.0.zip  https://github.com/sleuthkit/autopsy/releases/download/autopsy-4.17.0/autopsy-4.17.0.zip
download ${TMPDIR}/sleuthkit-java_4.10.1-1_amd64.deb  https://github.com/sleuthkit/sleuthkit/releases/download/sleuthkit-4.10.1/sleuthkit-java_4.10.1-1_amd64.deb

sed -Ei 's/^# deb-src /deb-src /' /etc/apt/sources.list
apt-get update && apt-get --fix-broken install -y && \
  apt-get install -y default-jdk testdisk build-essential autoconf libtool git-core
apt autoremove -y
apt-get build-dep -y imagemagick libmagickcore-dev libde265 libheif


stat /usr/src/libde265 || strukturag libde265
stat /usr/src/libheif || strukturag libheif
which convert || apt-get install -y imagemagick

ldconfig

stat /usr/lib/jvm/bellsoft-java8-full-amd64 || bellsoft-java8


apt --fix-broken install -y
apt install -y libvmdk-dev libc3p0-java libsqlite3-dev libbfio1 libbfio-dev libafflib-dev libewf-dev libvmdk1 libvhdi1 libewf2 libafflib0v5 libvhdi-dev

stat ${TMPDIR}/autopsy-4.17.0 || unzip ${TMPDIR}/autopsy-4.17.0.zip -d ${TMPDIR}
dpkg -s sleuthkit-java || dpkg -i ${TMPDIR}/sleuthkit-java_4.10.1-1_amd64.deb

export JAVA_HOME=$(readlink -f /usr/bin/javac | sed "s:/bin/javac::")
export JAVA_HOME=/usr/lib/jvm/bellsoft-java8-full-amd64
egrep "export JAVA_HOME=${JAVA_HOME}" /etc/profile || echo "export JAVA_HOME=${JAVA_HOME}" >> /etc/profile

source /etc/profile
cd ${TMPDIR}/autopsy-4.17.0 && sh ./unix_setup.sh

# https://digitalcorpora.org/corpora/scenarios/national-gallery-dc-2012-attack

download ${TMPDIR}/corpus/tracy-phone-2012-07-15-final.E01 http://downloads.digitalcorpora.org/corpora/scenarios/2012-ngdc/tracy-phone/tracy-phone-2012-07-15-final.E01
download ${TMPDIR}/corpus/carry-phone-2012-07-15-final.zip http://downloads.digitalcorpora.org/corpora/scenarios/2012-ngdc/carry-phone/carry-phone-2012-07-15-final.zip
download ${TMPDIR}/corpus/carry-tablet-2012-07-16-final.E01 http://downloads.digitalcorpora.org/corpora/scenarios/2012-ngdc/carry-tablet/carry-tablet-2012-07-16-final.E01
download ${TMPDIR}/corpus/carry-email.zip  http://downloads.digitalcorpora.org/corpora/scenarios/2012-ngdc/email.zip
download ${TMPDIR}/corpus/Tracy-phone-2012-07-15-1316.L01  http://downloads.digitalcorpora.org/corpora/scenarios/2012-ngdc/extra/tracy-phone-encase/Tracy-phone-2012-07-15-1316.L01
download ${TMPDIR}/corpus/tracy-external-2012-07-16-final.E01  http://downloads.digitalcorpora.org/corpora/scenarios/2012-ngdc/tracy-external/tracy-external-2012-07-16-final.E01
download ${TMPDIR}/corpus/tracy-home-2012-07-16-final.E01  http://downloads.digitalcorpora.org/corpora/scenarios/2012-ngdc/tracy-home/tracy-home-2012-07-16-final.E01
download ${TMPDIR}/corpus/tracy-home-2012-07-16-final.E02  http://downloads.digitalcorpora.org/corpora/scenarios/2012-ngdc/tracy-home/tracy-home-2012-07-16-final.E02
download ${TMPDIR}/corpus/ngdc-exterior-2012-07-06.pcap  http://downloads.digitalcorpora.org/corpora/scenarios/2012-ngdc/net/ngdc-exterior-2012-07-06.pcap
download ${TMPDIR}/corpus/ngdc-exterior-2012-07-09.pcap  http://downloads.digitalcorpora.org/corpora/scenarios/2012-ngdc/net/ngdc-exterior-2012-07-09.pcap
download ${TMPDIR}/corpus/ngdc-exterior-2012-07-10.pcap  http://downloads.digitalcorpora.org/corpora/scenarios/2012-ngdc/net/ngdc-exterior-2012-07-10.pcap
download ${TMPDIR}/corpus/ngdc-exterior-2012-07-12.txt  http://downloads.digitalcorpora.org/corpora/scenarios/2012-ngdc/net/ngdc-exterior-2012-07-12.txt
download ${TMPDIR}/corpus/ngdc-interior-2012-07-06.pcap  http://downloads.digitalcorpora.org/corpora/scenarios/2012-ngdc/net/ngdc-interior-2012-07-06.pcap
download ${TMPDIR}/corpus/ngdc-interior-2012-07-09.pcap  http://downloads.digitalcorpora.org/corpora/scenarios/2012-ngdc/net/ngdc-interior-2012-07-09.pcap
download ${TMPDIR}/corpus/ngdc-interior-2012-07-10.pcap  http://downloads.digitalcorpora.org/corpora/scenarios/2012-ngdc/net/ngdc-interior-2012-07-10.pcap
download ${TMPDIR}/corpus/http://downloads.digitalcorpora.org/corpora/scenarios/2012-ngdc/net/ngdc-interior-2012-07-12.txt

# https://stix.mitre.org/language/version1.0.1/samples.html

download  ${TMPDIR}/STIX/STIX_Domain_Watchlist.xml  https://raw.github.com/STIXProject/schemas/version_1.0.1/samples/STIX_Domain_Watchlist.xml
download  ${TMPDIR}/STIX/STIX_Email_wAttachment.xml  https://raw.github.com/STIXProject/schemas/version_1.0.1/samples/STIX_Email_wAttachment.xml
download  ${TMPDIR}/STIX/STIX_Email_wFullAttachment.xml  https://raw.github.com/STIXProject/schemas/version_1.0.1/samples/STIX_Email_wFullAttachment.xml
download  ${TMPDIR}/STIX/STIX_Email_wLink.xml  https://raw.github.com/STIXProject/schemas/version_1.0.1/samples/STIX_Email_wLink.xml
download  ${TMPDIR}/STIX/STIX_FileHash_Watchlist.xml  https://raw.github.com/STIXProject/schemas/version_1.0.1/samples/STIX_FileHash_Watchlist.xml
download  ${TMPDIR}/STIX/STIX_IP_Watchlist.xml  https://raw.github.com/STIXProject/schemas/version_1.0.1/samples/STIX_IP_Watchlist.xml
download  ${TMPDIR}/STIX/STIX_Indicator_Snort.xml  https://raw.github.com/STIXProject/schemas/version_1.0.1/samples/STIX_Indicator_Snort.xml
download  ${TMPDIR}/STIX/STIX_Malware_Sample.xml  https://raw.github.com/STIXProject/schemas/version_1.0.1/samples/STIX_Malware_Sample.xml
download  ${TMPDIR}/STIX/STIX_Malware_Sample.xml  https://raw.github.com/STIXProject/schemas/version_1.0.1/samples/STIX_Malware_Sample.xml
download  ${TMPDIR}/STIX/STIX_Phishing_Indicator.xml  https://raw.github.com/STIXProject/schemas/version_1.0.1/samples/STIX_Phishing_Indicator.xml
download  ${TMPDIR}/STIX/STIX_Snippet_Confidence.xml  https://raw.github.com/STIXProject/schemas/version_1.0.1/samples/STIX_Snippet_Confidence.xml
download  ${TMPDIR}/STIX/STIX_Snippet_ControlledVocab.xml  https://raw.github.com/STIXProject/schemas/version_1.0.1/samples/STIX_Snippet_ControlledVocab.xml
download  ${TMPDIR}/STIX/STIX_Snippet_Controlled_Vocabulary_Specification.xml  https://raw.github.com/STIXProject/schemas/version_1.0.1/samples/STIX_Snippet_Controlled_Vocabulary_Specification.xml
download  ${TMPDIR}/STIX/STIX_Snippet_Handling.xml  https://raw.github.com/STIXProject/schemas/version_1.0.1/samples/STIX_Snippet_Handling.xml
download  ${TMPDIR}/STIX/STIX_Snippet_Sightings.xml  https://raw.github.com/STIXProject/schemas/version_1.0.1/samples/STIX_Snippet_Sightings.xml
download  ${TMPDIR}/STIX/STIX_Snippet_XsiType.xml  https://raw.github.com/STIXProject/schemas/version_1.0.1/samples/STIX_Snippet_XsiType.xml
download  ${TMPDIR}/STIX/STIX_URL_Watchlist.xml  https://raw.github.com/STIXProject/schemas/version_1.0.1/samples/STIX_URL_Watchlist.xml
download  ${TMPDIR}/STIX/APT1-STIX.zip  https://stix.mitre.org/downloads/APT1-STIX.zip
download  ${TMPDIR}/STIX/poison_ivy-stix.zip  https://stix.mitre.org/language/version1.0.1/samples/poison_ivy-stix.zip

#  https://sourceforge.net/projects/autopsy/files/NSRL/
download  ${TMPDIR}/NSRL-262m-Autopsy/NSRL-262-ios-Autopsy.zip  https://sourceforge.net/projects/autopsy/files/NSRL/NSRL-262-ios-Autopsy.zip/download
download  ${TMPDIR}/NSRL-262m-Autopsy/NSRL-262-Android-Autopsy.zip  https://sourceforge.net/projects/autopsy/files/NSRL/NSRL-262-Android-Autopsy.zip/download
download  ${TMPDIR}/NSRL-262m-Autopsy/NSRL/NSRL-262m-Autopsy.zip  https://sourceforge.net/projects/autopsy/files/NSRL/NSRL-262m-Autopsy.zip/download



cat <<__EOD__

  To run autopsy:

    1.  sudo su -
    2.  source /etc/profile
    3.  cd ${TMPDIR}/autopsy-4.17.0
    4.  sh ./unix_setup.sh
    5.  bin/autopsy
    6.  Yes - If window pops-up asking about enabling the main library.

__EOD__

# https://digitalcorpora.org/corpora/scenarios/national-gallery-dc-2012-attack

